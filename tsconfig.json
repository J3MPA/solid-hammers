{
  "compilerOptions": {
    "noEmit": true,
    "target": "ES6",
    "module": "CommonJs",
    "strict": true,
    "outDir": ".",
    "sourceMap": true,
    "declaration": true,
    "resolveJsonModule": true,
    "noUncheckedIndexedAccess": true,
    "useUnknownInCatchVariables": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.*", "**/*.config.ts"]
}
