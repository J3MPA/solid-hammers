{
  "compilerOptions": {
    "noEmit": true,
    "target": "ES6",
    "module": "umd",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "outDir": ".",
    "sourceMap": true,
    "declaration": true,
    "noUncheckedIndexedAccess": true,
    "useUnknownInCatchVariables": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "**/*.config.ts"]
}
